#
# wm independent hotkeys
#

# terminal emulator
super + Return
	alacritty

# program launcher
super + d
	rofi -show run

super + shift + s
	scrot -q 100 -d 5

super + shift + f
	firefox

super + b
	nemo

super + p
	~/Scripts/pmenu.sh

super + shift + c
	~/Scripts/comics.sh 

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd

#
# berry hotkeys
#

super + {h, j, k, l}
    berryc window_move {-50 0, 0 50, 0 -50, 50 0}

super + shift +  {h, j, k, l}
    berryc window_resize {-50 0, 0 50, 0 -50, 50 0}

super + {1-9}
    berryc switch_workspace {0-9}

super + shift + {0-9}
    berryc send_to_workspace {0-9}

super + m
    berryc window_monocle

super + f
    berryc fullscreen

super +  p
    berryc snap_right

super + o 
    berryc snap_left

super + n
    berryc toggle_decorations

super + Tab
    berryc cycle_focus

super + q
    berryc window_close

super + c
    berryc window_center

~button1
    berryc pointer_focus

# Power Menu
super + p
	~/Scripts/pmenu.sh

#change layout

super + alt + space
	~/Scripts/kbdlayout.sh

super + shift + w
	~/Scripts/wifish.sh
  
#pulse Audio controls

XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10% #increase sound volume
XF86AudioLowerVolume
	pactl set-sink-volume 0 -10% #decrease sound volume
XF86AudioMute
	pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls

XF86MonBrightnessUp
	light -A 5    # increase screen brightness
XF86MonBrightnessDown
	light -U 5    # decrease screen brightness

# keyboard brightness controls

XF86KbdBrightnessUp
	light -s sysfs/leds/smc::kbd_backlight -A 5    # increase Kbd brightness
XF86KbdBrightnessDown 
	light -s sysfs/leds/smc::kbd_backlight -U 5 # decrease Kbd brightness

# Media player controls

XF86AudioPlay
	playerctl play
XF86AudioPause
	playerctl pause
XF86AudioNext
	playerctl next
XF86AudioPrev
playerctl previous
