##I3

# Go to, move windows to workspace
super + {_,shift +} {1,2,3,4,5,6,7,8,9}
	i3-msg {workspace,move container to workspace} {1,2,3,4,5,6,7,8,9}

# Restart I3 inplace

super + shift + r
	i3-msg restart

# Kill a window

super + shift +q
	i3-msg kill

#Change Focus, move window
super + {_,shift +} {h,j,k,l}
	i3-msg {focus,move} {left,down,up,right}

#Split horizontaly or virtically
alt + {h,v}
	i3-msg split {h,v}

#enter fullscreen
super + f
	i3-msg fullscreen toggle

#Change layout
super + {s,w,e}
	i3-msg layout {stacking,tabbed,toggle split}

# Toggle Tiling/Floating

super + shift + space
	i3-msg floating toggle

Change focus between tiling/floating
super + space
	i3-msg focus mode_toggle

#focus parent container
super + a
	focus parent
#focus child container
super + c
	focus child

#exit i3 session
super + shift + e
	~/Scripts/exit.sh

#Resize
super + alt + {h,j,k,l}
	i3-msg resize{shrink width 10 px,grow height 10 px,shrink height 10 px,grow width 10 px}


#shortcuts

super + d
	rofi -show run

super + Return
	alacritty

#open Web Browser
super + shift + f
	firefox

# Power Menu
super + p
	~/Scripts/pmenu.sh

#change layout

super + alt + space
	~/Scripts/kbdlayout.sh

super + shift + w
	~/Scripts/wifish.sh
  
#pulse Audio controls

XF86AudioRaiseVolume
	pactl set-sink-volume 0 +10% #increase sound volume
XF86AudioLowerVolume
	pactl set-sink-volume 0 -10% #decrease sound volume
XF86AudioMute
	pactl set-sink-mute 0 toggle # mute sound

# Sreen brightness controls

XF86MonBrightnessUp
	light -A 5    # increase screen brightness
XF86MonBrightnessDown
	light -U 5    # decrease screen brightness

# keyboard brightness controls

XF86KbdBrightnessUp
	light -s sysfs/leds/smc::kbd_backlight -A 5    # increase Kbd brightness
XF86KbdBrightnessDown 
	light -s sysfs/leds/smc::kbd_backlight -U 5 # decrease Kbd brightness

# Media player controls

XF86AudioPlay
	playerctl play
XF86AudioPause
	playerctl pause
XF86AudioNext
	playerctl next
XF86AudioPrev
playerctl previous

